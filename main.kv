<Button>
    background_normal: ""
    background_color: (0, 0, 0, 1)
    size_hint: (0.2, 0.2)

<CalculatorWidget>:
    BoxLayout
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: input
            text: "0"
            font_size: 43
            multiline: False
            halign: "right"
            size_hint: (1, 0.19)
            background_color: (0, 0, 0, 1)
            foreground_color: (1,1,1,1)

        GridLayout:
            cols: 4
            rows: 5

            Button:
                text: "«"
                font_size: 32
                on_press: root.deleteone()

            Button:
                on_press: root.clear()
                text: "CL"
                font_size: 32

            Button:
                text: "%"
                font_size: 32
                on_press: root.button_value("%")

            Button:
                text: "÷"
                font_size: 32
                background_color: (0, 0, 1, 1)
                on_press: root.signes("/")

            Button:

                text: "7"
                font_size: 32
                on_press: root.button_value("7")

            Button:

                text: "8"
                font_size: 32
                on_press: root.button_value("8")


            Button:

                text: "9"
                font_size: 32
                on_press: root.button_value("9")



            Button:

                text: "X"
                font_size: 32
                background_color: (0, 0, 1, 1)
                on_press: root.signes("*")

            Button:
                text: "4"
                font_size: 32
                on_press: root.button_value("4")

            Button:
                text: "5"
                font_size: 32
                on_press: root.button_value("5")

            Button:
                text: "6"
                font_size: 32
                on_press: root.button_value("6")

            Button:
                text: "-"
                font_size: 32
                background_color: (0, 0, 1, 1)
                on_press: root.signes("-")

            Button:

                text: "1"
                font_size: 32
                on_press: root.button_value("1")

            Button:

                text: "2"
                font_size: 32
                on_press: root.button_value("2")


            Button:

                text: "3"
                font_size: 32
                on_press: root.button_value("3")



            Button:

                text: "+"
                font_size: 32
                background_color: (0, 0, 1, 1)
                on_press: root.signes("+")

            Button:

                text: "±"
                font_size: 32
                on_press: root.button_value("±")

            Button:

                text: "0"
                font_size: 32
                on_press: root.button_value("0")




            Button:

                text: "."
                font_size: 32
                on_press: root.button_value(".")



            Button:

                text: "="
                font_size: 32
                background_color: (0, 0, 1, 1)
                on_press: root.results()











